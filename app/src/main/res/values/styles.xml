<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="home_button">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/select_1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="home_target">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/bg_1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="home_part1_ll">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/bg_2</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="home_head_score">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#698F01</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="home_head_history">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#D05902</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>





</resources>
